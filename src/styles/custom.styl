.task_content
  min-height: calc(100vh - 162px)

.t_desc
  position relative
  padding: 10px 15px 10px 10px
  white-space: pre-line

  .t_desc_empty_description
    color: #27b6ba

  .icon
    position: absolute
    top: 10px
    right: 5px
    font-size: 18px
    display: none
    color: #27b6ba



  &:hover
    background-color: #e6e8ec
    cursor pointer

    .icon
      display: block

.t_desc_edit
  padding: 10px 15px 10px 10px

  label
    margin-left: 0 !important;
    top: -2px !important;
    font-size: 14px;

  textarea
    padding-top: 0 !important

.input-group--text-field input,
.input-group--text-field textarea
  font-size: 14px
