.task_content
  min-height: calc(100vh - 162px)

.t_desc
  position relative
  padding: 10px 15px 10px 10px
  white-space: pre-line

  .t_desc_empty_description
    color: #27b6ba

  .icon
    position: absolute
    top: 10px
    right: 5px
    font-size: 18px
    display: none
    color: #27b6ba



  &:hover
    background-color: #e6e8ec
    cursor pointer

    .icon
      display: block

.t_desc_edit
  padding: 9px 14px 9px 9px
  border: 1px dashed #27b6ba
  border-radius: 3px

  .input-group__details
    display: none

  label
    margin-left: 0 !important;
    top: -2px !important;
    font-size: 14px;

  textarea
    padding-top: 0 !important

.input-group--text-field input,
.input-group--text-field textarea
  font-size: 14px

.task_item_value
  padding: 5px 10px
  border-radius: 4px
  background-color: #e6e8ec
  color: #696f7a
  white-space: nowrap
  display: inline-block

  .icon
    color: #696f7a

  &:hover
    color: #ffffff
    background-color: #27b6ba
    cursor pointer

    .icon
      color: #ffffff

.task_details
  .dialog__activator
    display: inline-block
  .list--three-line
    background-color transparent

    .list__tile
      padding-left: 0

      .list__tile__avatar
        min-width 40px
